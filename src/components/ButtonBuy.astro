---
    interface Props {
        etiqueta: string;
    }

    const etiqueta = Astro.props.etiqueta;
---
<button class="boton-compra">
    {etiqueta}
</button>
<style>
    .boton-compra{

        background-color: rgb(0, 183, 255);
        color:rgb(0, 0, 0);
        width: 210px;
        height: 40px;
        border-radius: 20px;
        border-color: rgb(255, 255, 255);
        box-shadow: 2px 2px 2px 0px rgb(187, 186, 186);
        margin:10px;
    }
</style>